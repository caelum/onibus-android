<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.caelum.ondeestaobusao.activity"
    android:versionCode="3"
    android:versionName="2.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".application.BusaoApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BusaoTheme" >
        <activity
            android:name=".PontosProximosActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MapaDoOnibusActivity"
            android:label="@string/app_name">
			<intent-filter>
			    <action android:name="android.intent.action.MAIN"/>
                <category android:name="br.com.caelum.ondeestaobusao.Mapa" />
            </intent-filter>
        </activity>
        
        
	    <service android:name=".service.LocationService" />

        <uses-library android:name="com.google.android.maps" />
    </application>
    

</manifest>