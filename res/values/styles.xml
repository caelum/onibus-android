<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BackgroundColorListPontos">
        <item name="android:background">#0099CC</item>
    </style>
    <style name="NomeOnibusApparence">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tamanho_letra_do_ponto</item>
    </style>
    
    <style name="DistanciaOnibusApparence">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">@dimen/tamanho_letra_da_distancia</item>
    </style>
    
	<style name="RateMeDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowTitleStyle">@style/RateMeDialogTitle</item>
	</style>
	<style name="RateMeDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:maxLines">1</item>
		<item name="android:height">5dp</item>        
	</style>
	<style name="RateMeDialogWindowTitle">
		<item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
	</style>
	
	<style name="Action_Bottom_Menu">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
	
</resources>
